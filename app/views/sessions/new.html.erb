<h2 class="ui center aligned large header">
  Welcome to Real Time Chat - <em>a complete Chat App</em>
</h2>

<h4 class="ui center aligned medium icon header">
  <i class="circular orange power tiny icon"></i>
  Log in to continue
</h4>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_with(scope: :session, url: login_path, class: "ui form", local: true) do |f| %>
<!--      <form class="ui form">-->
        <div class="field">
            <%= f.label :username %>
            <%= f.text_field :username, class: "ui left icon input", placeholder: "Enter your username" %>
<!--          <label>Username</label>-->
<!--          <div class="ui left icon input">-->
<!--            <input type="text" placeholder="Username">-->
            <i class="user icon"></i>
<!--          </div>-->
        </div>
        <div class="field">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
<!--          <label>Password</label>-->
<!--          <div class="ui left icon input">-->
<!--            <input type="text" placeholder="Password">-->
<!--            <i class="lock icon"></i>-->
<!--          </div>-->
        </div>
        <button class="ui orange submit button">Login</button>
<!--      </form>-->
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big orange disabled button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
